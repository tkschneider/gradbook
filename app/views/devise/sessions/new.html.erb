<%-# Edited by Joe and Tim-%>

<div style="background: url('/assets/nccJeff.jpg');">
<div class="large-3 large-centered columns">
  <br><br><br><br><br><br>
  <div class="login-box" style="background: #fff;
                                border: 1px solid #ddd;
                                margin: 100px 0;
                                padding: 20px 20px 10px 20px;">
    <div class="row">
      <div class="large-12 columns">
        <div class="row">
          <div class="large-12 columns">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.text_field :logon, :placeholder => 'Username', autofocus: true %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="large-12 columns">
            <div class="field">
              <%= f.password_field :password, :placeholder => 'Password', autocomplete: "off" %>
            </div>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end -%>

        <div class="row">
          <div class="large-12 large-centered columns">
            <div class="actions">
              <%= f.submit 'Log in', :class => 'button expand', :type => 'submit' %>
            </div>
          </div>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  <br><br><br><br><br>
</div>
</div>

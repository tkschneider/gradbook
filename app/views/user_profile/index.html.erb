<div class="row">
	
	<div class="medium-5 columns">
	<h2><%= @user.first_name%> 
	<%= @user.middle_initial.upcase%>
	<%= @user.last_name%>
	</h2>
	</div>
	
	<ul class="tabs" data-tab role="tablist">
	  <li class="tab-title active" role="presentational" ><a href="#panel2-1" role="tab" tabindex="0" aria-selected="true" controls="panel2-1">Information</a></li>
	  <li class="tab-title" role="presentational" ><a href="#panel2-2" role="tab" tabindex="0"aria-selected="false" controls="panel2-2">Employer</a></li>
	  <li class="tab-title" role="presentational"><a href="#panel2-3" role="tab" tabindex="0" aria-selected="false" controls="panel2-3">Survey</a></li>
	</ul>
	
</div>

<div class="row">

	<div class="small-6 columns">
	<strong>Birthday: </strong>
	<%= @user.birth_month%>/<%= @user.birth_day%>/<%= @user.birth_year%><br>
	
	<strong>Email: </strong>
	<%= current_login.email%>
	  </div>
		
	<div class="medium-7 columns">
	<div class="tabs-content">
	  <section role="tabpanel" aria-hidden="false" class="content active" id="panel2-1">
		<p>
		<h3> Alumni of North Central College </h3> 
		<%=@user.email_addr%> <br> 
		<h4>Degrees</h4> <br>
		<br>
		Degree Earned <br>
		Institution <br>
		Year <br>
		</p>
	  </section>
	  
	  
	  <section role="tabpanel" aria-hidden="true" class="content" id="panel2-2">
		<p>
		<h4>Employer info</h4>
		<%= @company.company_name%><br>
		<%= @company_info.city%>, <%= @company_info.state%> <br>
		</p>
	  </section>
	  
	  
	  <section role="tabpanel" aria-hidden="true" class="content" id="panel2-3">
		<h2>Surveys</h2>
	  </section>
	  </div>
	</div>

</div>





<section class="top-bar-section">
  <!-- Right Nav Section -->
  <ul class="right">
    <li class="<%= 'active' if params[:controller] == 'survey' %>">
      <%= link_to 'Surveys', survey_index_path %>
    </li>
    <li class="<%= 'active' if params[:controller] == 'internships' %>">
      <%= link_to 'Internships', internships_path %>
    </li>
    <li class="has-dropdown <%= 'active' if params[:controller] == 'giving_back' %>">
      <a href="#">Give Back</a>
      <ul class="dropdown">
        <li><%= link_to 'Internship', new_giving_back_path('internship') %></li>
        <li><%= link_to 'Mentoring', new_giving_back_path('mentoring') %></li>
        <li><%= link_to 'Guest Speaking', new_giving_back_path('guest_speaking') %></li>
        <li><%= link_to 'Other', new_giving_back_path('other') %></li>
      </ul>
    </li>
    <li class="has-dropdown <%= 'active' if params[:controller] == 'logins' %>">
      <%= link_to 'Profile', login_path(current_login) %>
      <ul class="dropdown">
        <li>
          <%= link_to 'My Profile', controller: '/user_profile' %>
        </li>
        <li>
          <%= link_to 'Edit', edit_login_path(current_login) %>
        </li>
        <li>
          <%= link_to "Logout", destroy_login_session_path, method: :delete  %>
        </li>
      </ul>
    </li>
  </ul>
</section>
